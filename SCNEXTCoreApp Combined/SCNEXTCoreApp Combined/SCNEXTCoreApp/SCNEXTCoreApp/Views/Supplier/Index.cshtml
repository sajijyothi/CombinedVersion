@model PagedList<SCNEXTCoreApp.Models.Master.Supplier>

@using PagedList.Core;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-controller="Supplier" asp-action="Index" method="get">
    <a asp-action="Create" class="btn btn-outline-success"><i class="far fa-plus-square"> </i> Create</a>

    @Html.RadioButton("searchBy", "Name", true)<text> Name</text>
    @Html.RadioButton("searchBy", "Code", true)<text> Code</text>
    @Html.TextBox("searching")
    <input type="submit" value="Search" />


</form>
<table class="table">
    <thead>
        <tr>
            <th>
                SupName
            </th>
            <th>
                SupCode
            </th>
            <th>
                SupTrnNo
            </th>
            <th>
                SupAddressId
            </th>
            <th>
                SupLoginEnable
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupTrnNo)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.SupLoginEnable)
                </td>

                <td>
                    <a asp-action="Create" asp-route-id="@item.SupID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.SupID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group col-md-4">
    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
</div>
<pager class="pager-container" list="@Model" asp-action="Index" asp-controller="Supplier" />
