    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Warehouse List</h4>
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Warehouse" asp-action="Index" method="get">
                            <a asp-action="AddorEdit" class="btn btn-outline-success"><i class="far fa-plus-square"> </i> Create</a>

                            @Html.RadioButton("searchBy", "Name", true)<text> Name</text>
                            @Html.RadioButton("searchBy", "Code", true)<text> Code</text>
                            @Html.TextBox("search")
                            <input type="submit" value="Search" />

                        </form>
                        <table class="table table-striped">

                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Code
