                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PostCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.State.StateId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Country.CountryId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.City.CityId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ContactPer)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ContPerMobNo)
                                                </td>
                                                <td>
