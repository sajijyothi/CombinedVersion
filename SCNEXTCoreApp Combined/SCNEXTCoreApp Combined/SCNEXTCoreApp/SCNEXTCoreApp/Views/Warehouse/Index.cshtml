                                        <th>
                                           WMDepartmentId
                                        </th>
                                        <th>
                                            WMTeleNo
                                        </th>
                                        <th>
                                            WMEmail
                                        </th>
                                        <th>
                                          WMUrl
                                        </th>
                                        <th>
                                            WMCurrencyId
                                        </th>*@

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() == 0)
                                {
                                    <tr>
                                        <td>No rows match search criteria</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            @*<td>
                                                    @Html.DisplayFor(modelItem => item.BranchId)
                                                </td>
